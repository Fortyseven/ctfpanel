{% extends "../_layouts/html.twig" %}

{# #################################### #}

{% macro link_render( entry ) %}
    {% if entry.type == "popup-image" %}
        <a
            {% if entry.alt %}title="{{entry.alt}}"{% endif %}
            onclick="openPopupImage('{{entry.url}}')"
        >
            💬 {{entry.name}}
        </a>
    {% else %}
        <a
            {% if entry.alt %}title="{{entry.alt}}"{% endif %}
            href="{{entry.url}}"
        >
            {{entry.name}}
        </a>
    {% endif %}
{% endmacro %}

{# #################################### #}

{% import _self as utils %}

{# #################################### #}

{% block content %}
<main>
    <tabselector>
        <button data-for-tab="main">⭐ Main</button>
        <button data-for-tab="osint">🎯 OSINT</button>
        <button data-for-tab="search">🔎 Search</button>
        <button data-for-tab="tools">🔨 Tools</button>
        <button data-for-tab="other">🐙 Other</button>
    </tabselector>
    <tabpage id="main">
        {% include "_tab-main.twig" %}
    </tabpage>
    <tabpage id="osint">
        {% include "_tab-osint.twig" %}
    </tabpage>
    <tabpage id="search">
        {% include "_tab-search.twig" %}
    </tabpage>
    <tabpage id="tools">
        {% include "_tab-tools.twig" %}
    </tabpage>
    <tabpage id="other">
        {% include "_tab-other.twig" %}
    </tabpage>
</main>
<div id="PopupContainer" onclick="closePopup()">
    <div class="content"></div>
</div>
{% endblock content %}
